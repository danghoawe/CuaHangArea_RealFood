<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Edittext_v1">
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height" >60dp</item>
        <item name="android:layout_marginLeft" >20dp</item>
        <item name="android:layout_marginTop" >20dp</item>
        <item name="android:layout_marginRight" >20dp</item>
        <item name="android:paddingLeft" >20dp</item>
        <item name="android:background" >@drawable/edittext_background_v1</item>
    </style>
    <style name="Title">
        <item name="android:textSize" >26dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:textColor" >@color/black</item>
        <item name="android:textAlignment" >center</item>
    </style>
    <style name="Title_V2">
        <item name="android:textSize" >14dp</item>
        <item name="android:textColor" >@color/black</item>
        <item name="android:textAlignment" >center</item>
    </style>
    <style name="Button_v1">
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height" >56dp</item>
        <item name="android:layout_marginLeft" >20dp</item>
        <item name="android:layout_marginTop" >50dp</item>
        <item name="android:layout_marginRight" >20dp</item>
        <item name="android:background" >@drawable/button_background_red</item>
        <item name="android:textAllCaps" >false</item>
        <item name="android:textColor" >@color/white</item>
        <item name="android:textSize" >16dp</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>
    <style name="Button_Home_Cardview" >
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>