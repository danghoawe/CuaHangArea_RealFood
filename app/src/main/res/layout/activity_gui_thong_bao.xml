<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screen.GuiThongBaoActivity">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivCuaHang"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/alert_notification" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Title_Label_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xin chào! "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvTenCuaHang"
                    style="@style/Title_Label_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Title_Label_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn cần hỗ trợ gì?"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvDiaChi"
                    style="@style/Title_Label_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Title_Label_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hãy để lại lời nhắn cho chúng tôi! Bộ phận kỹ thuật viên sẽ liên lạc với bạn sớm nhất có thể!"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvSoDienThoai"
                    style="@style/Title_Label_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nội dung thông báo"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        >
        <EditText
            android:background="@drawable/edittext_background_v1"
            android:textSize="14dp"
            android:id="@+id/edtNoiDung"
            android:layout_width="match_parent"
            android:minLines="9"
            android:gravity="top"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <android.widget.Button
        style="@style/Button_v2_Green"
        android:id="@+id/btnLuuThongTin"
        android:text="Gửi"
        android:layout_gravity="bottom"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:paddingLeft="30dp"
        android:paddingRight="50dp"
        />
    <android.widget.Button
        style="@style/Button_v2_Blue"
        android:id="@+id/btnLienHeHotline"
        android:text="Liên hệ hotline"
        android:layout_gravity="bottom"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:paddingLeft="30dp"
        android:paddingRight="50dp"
        />
</LinearLayout>